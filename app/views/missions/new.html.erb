<h1>New Mission</h1>

<%= form_for @mission do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%><br>

    <%= f.label :scientist %>
    <%= f.collection_select :scientist_id, @scientists, :id, :name %><br>

    <%= f.label :planets %>
    <%= f.collection_select :planet_id, @planets, :id, :name %><br>

    <%= f.submit %>
    <% end %>